@model Security_Feature_Project.ViewModels.AdminDashboardViewModel
@{
    ViewData["Title"] = "Admin Dashboard";
}

<div class="row fade-in">
    <div class="col-12">
        <div class="card card-modern">
            <div class="card-header card-header-modern">
                <div class="d-flex align-items-center justify-content-between">
                    <div>
                        <h5 class="mb-1 d-flex align-items-center">
                            <i class="bi bi-shield-check me-3"></i>
                            Administrator Dashboard
                        </h5>
                        <p class="text-muted mb-0">Welcome back, <strong>@Context.Session.GetString("Username")</strong>. Manage system security and users</p>
                    </div>
                    <div class="avatar-lg bg-danger bg-opacity-10 rounded-circle d-flex align-items-center justify-content-center">
                        <i class="bi bi-star-fill fs-4 text-danger"></i>
                    </div>
                </div>
            </div>

            <div class="card-body">
                <div class="row mb-5">
                    <div class="col-md-8">
                        <h3 class="mb-3">Security Overview</h3>
                        <div class="row g-3">
                            <div class="col-sm-6 col-md-4">
                                <div class="card bg-dark border border-color p-3">
                                    <div class="d-flex align-items-center">
                                        <div class="avatar-sm bg-primary bg-opacity-10 rounded-circle d-flex align-items-center justify-content-center me-3">
                                            <i class="bi bi-people text-primary"></i>
                                        </div>
                                        <div>
                                            <h4 class="mb-0">@Model.TotalUsers</h4>
                                            <small class="text-muted">Total Users</small>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="col-sm-6 col-md-4">
                                <div class="card bg-dark border border-color p-3">
                                    <div class="d-flex align-items-center">
                                        <div class="avatar-sm bg-warning bg-opacity-10 rounded-circle d-flex align-items-center justify-content-center me-3">
                                            <i class="bi bi-exclamation-triangle text-warning"></i>
                                        </div>
                                        <div>
                                            <h4 class="mb-0">@Model.LockedAccounts</h4>
                                            <small class="text-muted">Locked Accounts</small>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="col-sm-6 col-md-4">
                                <div class="card bg-dark border border-color p-3">
                                    <div class="d-flex align-items-center">
                                        <div class="avatar-sm bg-info bg-opacity-10 rounded-circle d-flex align-items-center justify-content-center me-3">
                                            <i class="bi bi-clipboard-data text-info"></i>
                                        </div>
                                        <div>
                                            <h4 class="mb-0">@Model.TotalAuditLogs</h4>
                                            <small class="text-muted">Audit Logs</small>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                   

                <h4 class="mb-4">Administrative Controls</h4>
                <div class="row g-4">
                    <div class="col-md-4">
                        <div class="card dashboard-card border border-color p-4 text-center">
                            <div class="avatar-lg bg-primary bg-opacity-10 rounded-circle d-flex align-items-center justify-content-center mx-auto mb-3">
                                <i class="bi bi-people fs-2 text-primary"></i>
                            </div>
                            <h5 class="mb-2">Manage Users</h5>
                            <p class="text-muted small mb-3">Add, edit, or remove system users and manage permissions</p>
                            <a asp-controller="User" asp-action="Index"
                               class="btn btn-primary btn-modern w-100">
                                <i class="bi bi-gear me-2"></i>
                                Open User Manager
                            </a>
                        </div>
                    </div>

                    <div class="col-md-4">
                        <div class="card dashboard-card border border-color p-4 text-center">
                            <div class="avatar-lg bg-warning bg-opacity-10 rounded-circle d-flex align-items-center justify-content-center mx-auto mb-3">
                                <i class="bi bi-clipboard-data fs-2 text-warning"></i>
                            </div>
                            <h5 class="mb-2">Audit Logs</h5>
                            <p class="text-muted small mb-3">Review security logs and monitor system access attempts</p>
                            <a asp-controller="User" asp-action="AuditLogs"
                               class="btn btn-warning btn-modern w-100">
                                <i class="bi bi-search me-2"></i>
                                View Security Logs
                            </a>
                        </div>
                    </div>

                    <div class="col-md-4">
                        <div class="card dashboard-card border border-color p-4 text-center">
                            <div class="avatar-lg bg-danger bg-opacity-10 rounded-circle d-flex align-items-center justify-content-center mx-auto mb-3">
                                <i class="bi bi-box-arrow-right fs-2 text-danger"></i>
                            </div>
                            <h5 class="mb-2">Session Control</h5>
                            <p class="text-muted small mb-3">Logout from admin session or manage active sessions</p>
                            <a asp-controller="Account" asp-action="Logout"
                               class="btn btn-danger btn-modern w-100">
                                <i class="bi bi-power me-2"></i>
                                Logout Admin
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>