@{
    ViewData["Title"] = "User Dashboard";
}

<div class="row fade-in">
    <div class="col-12">
        <div class="card card-modern">
            <div class="card-header card-header-modern">
                <div class="d-flex align-items-center justify-content-between">
                    <div>
                        <h5 class="mb-1 d-flex align-items-center">
                            <i class="bi bi-speedometer2 me-3"></i>
                            User Dashboard
                        </h5>
                        <p class="text-muted mb-0">Welcome back to your security dashboard</p>
                    </div>
                    <div class="avatar-lg bg-primary bg-opacity-10 rounded-circle d-flex align-items-center justify-content-center">
                        <i class="bi bi-person-check fs-4 text-primary"></i>
                    </div>
                </div>
            </div>

            <div class="card-body">
                <div class="row align-items-center mb-5">
                    <div class="col-md-8">
                        <h3 class="mb-2">Hello, <span class="text-primary">@Context.Session.GetString("Username")</span>!</h3>
                        <p class="text-muted mb-4">
                            You are logged in as a standard user. You have access to basic system features and can view your account information.
                        </p>

                        <div class="d-flex flex-wrap gap-3">
                            <div class="d-flex align-items-center me-4">
                                <div class="avatar-sm bg-success bg-opacity-10 rounded-circle d-flex align-items-center justify-content-center me-2">
                                    <i class="bi bi-check-circle text-success"></i>
                                </div>
                                <div>
                                    <small class="text-muted">Status</small>
                                    <div class="fw-semibold">Active</div>
                                </div>
                            </div>

                            <div class="d-flex align-items-center me-4">
                                <div class="avatar-sm bg-info bg-opacity-10 rounded-circle d-flex align-items-center justify-content-center me-2">
                                    <i class="bi bi-calendar-check text-info"></i>
                                </div>
                                <div>
                                    <small class="text-muted">Last Login</small>
                                    <div class="fw-semibold">@DateTime.Now.ToString("MMM dd, HH:mm")</div>
                                </div>
                            </div>

                            <div class="d-flex align-items-center">
                                <div class="avatar-sm bg-warning bg-opacity-10 rounded-circle d-flex align-items-center justify-content-center me-2">
                                    <i class="bi bi-shield-check text-warning"></i>
                                </div>
                                <div>
                                    <small class="text-muted">Security Level</small>
                                    <div class="fw-semibold">Standard</div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-4 text-md-end mt-3 mt-md-0">
                        <div class="card bg-dark border border-color p-3">
                            <h6 class="text-muted mb-3">Quick Actions</h6>
                            <div class="d-grid gap-2">
                                <a asp-controller="Account" asp-action="Logout"
                                   class="btn btn-outline-danger btn-modern d-flex align-items-center justify-content-center">
                                    <i class="bi bi-box-arrow-right me-2"></i>
                                    Logout Session
                                </a>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row g-4">
                    <div class="col-md-6 col-lg-4">
                        <div class="card dashboard-card border border-color p-4 text-center">
                            <div class="avatar-lg bg-primary bg-opacity-10 rounded-circle d-flex align-items-center justify-content-center mx-auto mb-3">
                                <i class="bi bi-person-circle fs-2 text-primary"></i>
                            </div>
                            <h5 class="mb-2">Profile</h5>
                            <p class="text-muted small mb-3">View and manage your account information</p>
                            <button class="btn btn-outline-primary btn-sm" disabled>
                                <i class="bi bi-eye me-1"></i> View Profile
                            </button>
                        </div>
                    </div>

                    <div class="col-md-6 col-lg-4">
                        <div class="card dashboard-card border border-color p-4 text-center">
                            <div class="avatar-lg bg-success bg-opacity-10 rounded-circle d-flex align-items-center justify-content-center mx-auto mb-3">
                                <i class="bi bi-key fs-2 text-success"></i>
                            </div>
                            <h5 class="mb-2">Password</h5>
                            <p class="text-muted small mb-3">Update your password for enhanced security</p>
                            <button class="btn btn-outline-success btn-sm" disabled>
                                <i class="bi bi-arrow-clockwise me-1"></i> Change Password
                            </button>
                        </div>
                    </div>

                    <div class="col-md-6 col-lg-4">
                        <div class="card dashboard-card border border-color p-4 text-center">
                            <div class="avatar-lg bg-info bg-opacity-10 rounded-circle d-flex align-items-center justify-content-center mx-auto mb-3">
                                <i class="bi bi-clock-history fs-2 text-info"></i>
                            </div>
                            <h5 class="mb-2">Activity</h5>
                            <p class="text-muted small mb-3">Check your recent login activity and sessions</p>
                            <button class="btn btn-outline-info btn-sm" disabled>
                                <i class="bi bi-list-check me-1"></i> View Activity
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>