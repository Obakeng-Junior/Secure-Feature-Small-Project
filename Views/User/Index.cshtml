@model IEnumerable<Security_Feature_Project.Models.User>
@{
    ViewData["Title"] = "Manage Users";
    var currentUsername = Context.Session.GetString("Username");
}

<div class="row fade-in">
    <div class="col-12">
        <div class="card card-modern">
            <div class="card-header card-header-modern d-flex justify-content-between align-items-center">
                <div>
                    <h5 class="mb-1 d-flex align-items-center">
                        <i class="bi bi-people me-3"></i>
                        User Management
                    </h5>
                    <p class="text-muted mb-0">Manage system users, roles, and access permissions</p>
                </div>
                <a asp-action="AddUser" class="btn btn-success btn-modern">
                    <i class="bi bi-person-plus me-2"></i>
                    Add User
                </a>
            </div>

            <div class="card-body">
                <div class="row mb-4">
                    <div class="col-md-6">
                        <form method="get" class="mb-3 mb-md-0">
                            <div class="input-group">
                                <span class="input-group-text bg-dark border-end-0">
                                    <i class="bi bi-search text-muted"></i>
                                </span>
                                <input type="text"
                                       name="search"
                                       class="form-control border-start-0 border-end-0"
                                       placeholder="Search by username..."
                                       value="@Context.Request.Query["search"]" />
                                <button class="btn btn-primary border-start-0" type="submit">
                                    Search
                                </button>
                            </div>
                        </form>
                    </div>

                    <div class="col-md-6 text-md-end">
                        <div class="btn-group" role="group">
                            <button type="button" class="btn btn-outline-secondary btn-sm active">All Users</button>
                            <button type="button" class="btn btn-outline-secondary btn-sm">Active</button>
                            <button type="button" class="btn btn-outline-secondary btn-sm">Locked</button>
                            <button type="button" class="btn btn-outline-secondary btn-sm">Admins</button>
                        </div>
                    </div>
                </div>

                <div class="table-responsive">
                    <table class="table table-modern table-hover align-middle">
                        <thead class="table-light">
                            <tr>
                                <th>
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" id="selectAll">
                                    </div>
                                </th>
                                <th>User</th>
                                <th>Role</th>
                                <th>Status</th>
                                <th>Last Active</th>
                                <th class="text-end">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var user in Model)
                            {
                                <tr>
                                    <td>
                                        <div class="form-check">
                                            <input class="form-check-input user-checkbox" type="checkbox" value="@user.Id"
                                                   @(user.Username == currentUsername ? "disabled" : "")>
                                        </div>
                                    </td>
                                    <td>
                                        <div class="d-flex align-items-center">
                                            <div class="avatar-sm bg-primary bg-opacity-10 rounded-circle d-flex align-items-center justify-content-center me-3">
                                                @if (user.Role.Name == "Admin")
                                                {
                                                    <i class="bi bi-star-fill text-primary"></i>
                                                }
                                                else
                                                {
                                                    <i class="bi bi-person text-primary"></i>
                                                }
                                            </div>
                                            <div>
                                                <div class="fw-semibold">@user.Username</div>
                                                <small class="text-muted">ID: @user.Id</small>
                                            </div>
                                        </div>
                                    </td>
                                    <td>
                                        @if (user.Role.Name == "Admin")
                                        {
                                            <span class="badge bg-primary d-flex align-items-center" style="width: fit-content;">
                                                <i class="bi bi-shield-check me-1"></i>
                                                @user.Role.Name
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary d-flex align-items-center" style="width: fit-content;">
                                                <i class="bi bi-person me-1"></i>
                                                @user.Role.Name
                                            </span>
                                        }
                                    </td>
                                    <td>
                                        @if (user.IsLocked)
                                        {
                                            <span class="badge bg-danger d-flex align-items-center" style="width: fit-content;">
                                                <i class="bi bi-lock me-1"></i>
                                                Locked
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-success d-flex align-items-center" style="width: fit-content;">
                                                <i class="bi bi-unlock me-1"></i>
                                                Active
                                            </span>
                                        }
                                    </td>
                                    <td>
                                        <small class="text-muted">@DateTime.Now.AddDays(-new Random().Next(0, 30)).ToString("MMM dd, yyyy")</small>
                                    </td>
                                    <td class="text-end">
                                        <div class="btn-group btn-group-sm" role="group">
                                            @if (user.Username != currentUsername)
                                            {
                                                <a asp-action="ToggleLock"
                                                   asp-route-id="@user.Id"
                                                   class="btn btn-outline-warning"
                                                   data-bs-toggle="tooltip"
                                                   data-bs-title="@(user.IsLocked ? "Unlock User" : "Lock User")">
                                                    <i class="bi @(user.IsLocked ? "bi-unlock" : "bi-lock")"></i>
                                                </a>

                                                <a asp-action="Edit"
                                                   asp-route-id="@user.Id"
                                                   class="btn btn-outline-info"
                                                   data-bs-toggle="tooltip"
                                                   data-bs-title="Edit User">
                                                    <i class="bi bi-pencil"></i>
                                                </a>

                                                <a asp-action="Delete"
                                                   asp-route-id="@user.Id"
                                                   class="btn btn-outline-danger"
                                                   onclick="return confirm('Are you sure you want to delete this user? This action cannot be undone.');"
                                                   data-bs-toggle="tooltip"
                                                   data-bs-title="Delete User">
                                                    <i class="bi bi-trash"></i>
                                                </a>
                                            }
                                            else
                                            {
                                                <span class="badge bg-info">
                                                    <i class="bi bi-person-check me-1"></i>
                                                    Current User
                                                </span>
                                            }
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <div class="row mt-4">
                    <div class="col-md-6">
                        <div class="d-flex align-items-center">
                            <select class="form-select form-select-sm w-auto me-2">
                                <option>Bulk Actions</option>
                                <option value="lock">Lock Selected</option>
                                <option value="unlock">Unlock Selected</option>
                                <option value="delete">Delete Selected</option>
                            </select>
                            <button class="btn btn-outline-secondary btn-sm">Apply</button>
                        </div>
                    </div>
                    <div class="col-md-6 text-md-end">
                        <nav aria-label="Page navigation">
                            <ul class="pagination pagination-sm justify-content-end mb-0">
                                <li class="page-item disabled">
                                    <a class="page-link" href="#" tabindex="-1">Previous</a>
                                </li>
                                <li class="page-item active"><a class="page-link" href="#">1</a></li>
                                <li class="page-item"><a class="page-link" href="#">2</a></li>
                                <li class="page-item"><a class="page-link" href="#">3</a></li>
                                <li class="page-item">
                                    <a class="page-link" href="#">Next</a>
                                </li>
                            </ul>
                        </nav>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        // Select all checkbox
        const selectAll = document.getElementById('selectAll');
        const userCheckboxes = document.querySelectorAll('.user-checkbox');

        selectAll.addEventListener('change', function() {
            userCheckboxes.forEach(checkbox => {
                if (!checkbox.disabled) {
                    checkbox.checked = this.checked;
                }
            });
        });

        // Initialize tooltips
        const tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'));
        tooltipTriggerList.map(function (tooltipTriggerEl) {
            return new bootstrap.Tooltip(tooltipTriggerEl);
        });
    });
</script>