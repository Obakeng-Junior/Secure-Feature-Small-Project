@model IEnumerable<Security_Feature_Project.Models.AuditLog>
@{
    ViewData["Title"] = "Audit Logs";
}

<div class="row fade-in">
    <div class="col-12">
        <div class="card card-modern">
            <div class="card-header card-header-modern d-flex justify-content-between align-items-center">
                <h5 class="mb-0 d-flex align-items-center">
                    <i class="bi bi-clipboard-data me-2"></i>
                    Login Audit Logs
                </h5>
                <span class="badge bg-secondary">@Model.Count() entries</span>
            </div>

            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-modern table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>#</th>
                                <th><i class="bi bi-person me-1"></i> Username</th>
                                <th><i class="bi bi-clock me-1"></i> Attempted At</th>
                                <th><i class="bi bi-info-circle me-1"></i> Status</th>
                               
                            </tr>
                        </thead>
                        <tbody>
                            @if (!Model.Any())
                            {
                                <tr>
                                    <td colspan="5" class="text-center text-muted py-5">
                                        <i class="bi bi-database-exclamation display-6 d-block mb-3"></i>
                                        <h5>No audit logs found</h5>
                                        <p class="mb-0">All login attempts will appear here</p>
                                    </td>
                                </tr>
                            }
                            else
                            {
                                int count = 1;
                                foreach (var log in Model.OrderByDescending(l => l.AttemptedAt))
                                {
                                    <tr>
                                        <td class="fw-bold">@count</td>
                                        <td>
                                            <div class="d-flex align-items-center">
                                                <div class="avatar-sm bg-primary bg-opacity-10 rounded-circle d-flex align-items-center justify-content-center me-2">
                                                    <i class="bi bi-person text-primary"></i>
                                                </div>
                                                <span>@log.Username</span>
                                            </div>
                                        </td>
                                        <td>
                                            <div class="d-flex flex-column">
                                                <span class="fw-semibold">@log.AttemptedAt.ToString("MMM dd, yyyy")</span>
                                                <small class="text-muted">@log.AttemptedAt.ToString("HH:mm:ss")</small>
                                            </div>
                                        </td>
                                        <td>
                                            @if (log.Success)
                                            {
                                                <span class="badge bg-success d-flex align-items-center" style="width: fit-content;">
                                                    <i class="bi bi-check-circle me-1"></i>
                                                    Success
                                                </span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-danger d-flex align-items-center" style="width: fit-content;">
                                                    <i class="bi bi-x-circle me-1"></i>
                                                    Failed
                                                </span>
                                            }
                                        </td>
                                       
                                    </tr>
                                    count++;
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>

            <div class="card-footer border-top border-color p-3">
                <a asp-controller="Home" asp-action="Dashboard"
                   class="btn btn-secondary btn-modern">
                    <i class="bi bi-arrow-left me-2"></i>
                    Back to Dashboard
                </a>
            </div>
        </div>
    </div>
</div>