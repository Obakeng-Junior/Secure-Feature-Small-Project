<!DOCTYPE html>
<html lang="en" data-bs-theme="dark">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SecureAccess</title>

   
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">

   
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css">

   
    <style>
        :root {
            --primary-gradient: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            --secondary-gradient: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
            --dark-bg: #0a0e17;
            --card-bg: #1a1f2e;
            --border-color: #2d3748;
            --accent-color: #00d4ff;
        }

        body {
            background-color: var(--dark-bg);
            font-family: 'Segoe UI', system-ui, -apple-system, sans-serif;
            min-height: 100vh;
            display: flex;
            flex-direction: column;
        }

       
        .navbar-modern {
            background: rgba(10, 14, 23, 0.95) !important;
            backdrop-filter: blur(10px);
            border-bottom: 1px solid var(--border-color);
            padding: 1rem 0;
            box-shadow: 0 4px 30px rgba(0, 0, 0, 0.3);
        }

        .navbar-brand {
            background: var(--primary-gradient);
            -webkit-background-clip: text;
            background-clip: text;
            color: transparent;
            font-weight: 700;
            font-size: 1.5rem;
            letter-spacing: -0.5px;
        }

        .nav-link {
            color: #cbd5e0 !important;
            padding: 0.5rem 1rem !important;
            border-radius: 8px;
            transition: all 0.3s ease;
            margin: 0 2px;
        }

        .nav-link:hover, .nav-link.active {
            background: rgba(102, 126, 234, 0.1);
            color: var(--accent-color) !important;
            transform: translateY(-1px);
        }

       
        .card-modern {
            background: var(--card-bg);
            border: 1px solid var(--border-color);
            border-radius: 16px;
            box-shadow: 0 8px 32px rgba(0, 0, 0, 0.3);
            transition: transform 0.3s ease;
        }

        .card-modern:hover {
            transform: translateY(-2px);
        }

        .card-header-modern {
            background: rgba(26, 31, 46, 0.8);
            border-bottom: 1px solid var(--border-color);
            border-radius: 16px 16px 0 0 !important;
            padding: 1.25rem 1.5rem;
        }

        .card-header-gradient {
            background: var(--primary-gradient);
            color: white;
        }

       
        .table-modern {
            --bs-table-bg: transparent;
            --bs-table-border-color: var(--border-color);
            color: #cbd5e0;
        }

        .table-modern thead th {
            border-bottom: 2px solid var(--border-color);
            font-weight: 600;
            text-transform: uppercase;
            font-size: 0.85rem;
            letter-spacing: 0.5px;
            color: #94a3b8;
        }

        .table-modern tbody tr {
            border-bottom: 1px solid var(--border-color);
            transition: background-color 0.2s;
        }

        .table-modern tbody tr:hover {
            background: rgba(102, 126, 234, 0.05);
        }

      
        .btn-modern {
            border-radius: 10px;
            font-weight: 500;
            padding: 0.5rem 1.5rem;
            transition: all 0.3s ease;
            border: none;
        }

        .btn-primary {
            background: var(--primary-gradient);
        }

        .btn-success {
            background: linear-gradient(135deg, #10b981 0%, #059669 100%);
        }

        .btn-danger {
            background: linear-gradient(135deg, #ef4444 0%, #dc2626 100%);
        }

        .btn-warning {
            background: linear-gradient(135deg, #f59e0b 0%, #d97706 100%);
        }

        .btn-secondary {
            background: linear-gradient(135deg, #6b7280 0%, #4b5563 100%);
        }

        .btn-outline-danger {
            border: 2px solid #ef4444;
            color: #ef4444;
        }

        .btn-outline-danger:hover {
            background: #ef4444;
            color: white;
        }

        /* Badge Styles */
        .badge {
            padding: 0.35em 0.65em;
            font-weight: 500;
            border-radius: 8px;
        }

        .badge.bg-success {
            background: linear-gradient(135deg, #10b981 0%, #059669 100%) !important;
        }

        .badge.bg-danger {
            background: linear-gradient(135deg, #ef4444 0%, #dc2626 100%) !important;
        }

        .badge.bg-secondary {
            background: linear-gradient(135deg, #6b7280 0%, #4b5563 100%) !important;
        }

      
        .form-control, .form-select {
            background: rgba(26, 31, 46, 0.8);
            border: 1px solid var(--border-color);
            color: #e2e8f0;
            border-radius: 10px;
            padding: 0.75rem 1rem;
        }

        .form-control:focus, .form-select:focus {
            background: rgba(26, 31, 46, 0.9);
            border-color: var(--accent-color);
            box-shadow: 0 0 0 3px rgba(0, 212, 255, 0.1);
            color: #e2e8f0;
        }

        .input-group .form-control {
            border-right: none;
        }

        .input-group .btn-primary {
            border-top-left-radius: 0;
            border-bottom-left-radius: 0;
        }

        
        .alert {
            border-radius: 12px;
            border: none;
            background: linear-gradient(135deg, #fecaca 0%, #fca5a5 100%);
            color: #7f1d1d;
        }

        .footer-modern {
            background: rgba(10, 14, 23, 0.95);
            border-top: 1px solid var(--border-color);
            color: #94a3b8;
            padding: 1.5rem 0;
            margin-top: auto;
        }

       
        .dashboard-card {
            height: 100%;
            transition: all 0.3s ease;
            border: 1px solid transparent;
        }

        .dashboard-card:hover {
            border-color: var(--accent-color);
            transform: translateY(-5px);
            box-shadow: 0 15px 40px rgba(0, 212, 255, 0.1);
        }

       
        @@keyframes fadeIn {
            from { opacity: 0; transform: translateY(10px); }
            to { opacity: 1; transform: translateY(0); }
        }

        .fade-in {
            animation: fadeIn 0.5s ease-out;
        }

     
        @@media (max-width: 768px) {
            .container {
                padding-left: 1rem;
                padding-right: 1rem;
            }

            .navbar-nav {
                padding-top: 1rem;
            }

            .nav-link {
                margin: 0.25rem 0;
            }
        }
    </style>
</head>
<body>
   
    <header>
        <nav class="navbar navbar-expand-lg navbar-modern">
            <div class="container">
                <a class="navbar-brand d-flex align-items-center" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="bi bi-shield-lock me-2"></i>
                    SecureAccess
                </a>

                <button class="navbar-toggler border-0" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item">
                            <a class="nav-link d-flex align-items-center" asp-area="" asp-controller="Home" asp-action="Dashboard">
                                <i class="bi bi-speedometer2 me-2"></i>
                                Dashboard
                            </a>
                        </li>

                        @if (Context.Session.GetString("Role") == "Admin")
                        {
                            <li class="nav-item">
                                <a class="nav-link d-flex align-items-center" asp-controller="User" asp-action="Index">
                                    <i class="bi bi-people me-2"></i>
                                    Manage Users
                                </a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link d-flex align-items-center" asp-controller="User" asp-action="AuditLogs">
                                    <i class="bi bi-clipboard-data me-2"></i>
                                    Audit Logs
                                </a>
                            </li>
                        }

                        <li class="nav-item">
                            <a class="nav-link d-flex align-items-center" asp-controller="Account" asp-action="Logout">
                                <i class="bi bi-box-arrow-right me-2"></i>
                                Logout
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

   
    <main class="flex-grow-1">
        <div class="container py-4">
            @RenderBody()
        </div>
    </main>

  
    <footer class="footer-modern">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-md-6">
                    <div class="d-flex align-items-center">
                        <i class="bi bi-shield-check text-primary me-2"></i>
                        <span>&copy; 2025 SecureAccess - Advanced Security Management System</span>
                    </div>
                </div>
                <div class="col-md-6 text-md-end">
                    <small class="text-muted">Last login: @DateTime.Now.ToString("MMM dd, yyyy HH:mm")</small>
                </div>
            </div>
        </div>
    </footer>


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        
        document.addEventListener('DOMContentLoaded', function() {
            const cards = document.querySelectorAll('.card-modern, .dashboard-card');
            cards.forEach(card => {
                card.classList.add('fade-in');
            });

           
            const currentPath = window.location.pathname;
            document.querySelectorAll('.nav-link').forEach(link => {
                if (link.getAttribute('href') === currentPath) {
                    link.classList.add('active');
                }
            });
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>